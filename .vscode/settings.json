// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "workbench.colorCustomizations": {
        "statusBar.foreground": "#100a22",
        "statusBar.debuggingForeground": "#100a22",
        "statusBar.prominentForeground": "#100a22",
        "statusBar.background": "#a3c4f3",
        "statusBar.debuggingBackground": "#a3c4f3",
        "statusBar.prominentBackground": "#a3c4f3",
        "statusBarItem.hoverBackground": "#8fb0df",
        "statusBarItem.prominentHoverBackground": "#8fb0df",
        "statusBarItem.activeBackground": "#7b9ccb"
    },
    "cSpell.words": [
        "tinycolor"
    ]
}