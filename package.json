{
	"name": "statusbar-color-changer",
	"displayName": "Statusbar Color Changer",
	"description": "Set the status bar to user-defined colors",
	"version": "0.1.0",
	"publisher": "wyspr",
	"engines": {
		"vscode": "^1.30.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/preprocessor/vscode-statusbar-color"
	},
	"license": "GPL-3.0",
	"categories": [
		"Other"
	],
	"keywords": [
		"status",
		"bar",
		"id",
		"windows",
		"color",
		"stamp",
		"identify",
		"extension",
		"development",
		"UI",
		"vscode"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[{
				"title": "Statusbar Color Changer",
				"properties": {
					"statusbar.colors": {
						"markdownDescription": "Commands are in the format: `statusbar-color.color.NAME`",
						"type": "object",
						"additionalProperties": {
							"type": "string",
							"pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
							"patternErrorMessage": "Color code should be in hex format"
						},
						"default": null
					}
				}
			}],
		"commands": [
			{
				"command": "statusbar-color.set",
				"title": "Statusbar Color: Set"
			},
			{
				"command": "statusbar-color.reset",
				"title": "Statusbar Color: Reset"
			}
		]
	},
	"scripts": {
		"package": "vsce package",
		"install": "code --install-extension status-color-0.0.1.vsix",
		"publish": "vsce publish",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
